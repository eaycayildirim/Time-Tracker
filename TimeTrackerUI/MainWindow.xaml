<Window x:Class="TimeTrackerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackerUI"
        mc:Ignorable="d"
        Title="Time Tracker" Height="350" Width="550" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Border Padding="10">
        <StackPanel>
            <Grid Background="LemonChiffon">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Label Name="TimerLabel" Content="00:00:00" HorizontalAlignment="Center" Foreground="Black" FontSize="60"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox Name="SelectionCombobox" Margin="10 20 0 0" Grid.Column="0"></ComboBox>
                <TextBox Name="AddTextBox" Margin="10 20 0 0" Grid.Column="1"/>
                <Button Name="AddButton" Content="ADD" Grid.Column="2" Margin="10 20 10 0" Click="AddButton_Click"/>
                <Button Name="DeleteButton" Content="DELETE" Grid.Column="3" Margin="0 20 10 0" Click="DeleteButton_Click"/>
            </Grid>
            <Grid Margin="0 20 0 0" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Name="StartStopButton" Grid.Column="0" Content="START / STOP" Margin="10 0 10 0" FontWeight="Bold" FontSize="15" Click="StartStopButton_Click"/>
                <Button Name="PauseButton" Grid.Column="1" Content="PAUSE" Margin="10 0 10 0" FontWeight="Bold" FontSize="15"/>
            </Grid>
            <Grid Margin="0 15 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Name="CurrentTimeLabel" FontSize="35" HorizontalAlignment="Center" Grid.Column="0"/>
                <Button Name="CheckLogButton" Content="Check Logs" FontSize="15" Margin="10 10 10 10" Grid.Column="1" Click="CheckLogButton_Click"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
