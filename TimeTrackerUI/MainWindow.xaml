<Window x:Class="TimeTrackerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTrackerUI"
        mc:Ignorable="d"
        Title="Time Tracker" Height="350" Width="550" WindowStartupLocation="CenterScreen">
    <Border Padding="10">
        <StackPanel>
            <Grid Background="LemonChiffon">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Label Name="TimerLabel" HorizontalAlignment="Center" Foreground="Black" FontSize="30"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox Name="SelectionCombobox" Margin="0 20 0 0" Grid.Column="0"/>
                <Button Name="EditButton" Content="EDIT" Grid.Column="1" Margin="10 20 10 0"/>
            </Grid>
            <Grid Margin="0 20 0 0" Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="START" Margin="10 0 10 0" FontWeight="Bold" FontSize="15"/>
                <Button Grid.Column="1" Content="PAUSE" Margin="10 0 10 0" FontWeight="Bold" FontSize="15"/>
                <Button Grid.Column="2" Content="STOP" Margin="10 0 10 0" FontWeight="Bold" FontSize="15"/>
            </Grid>
            <Grid Margin="0 15 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Name="CurrentTimeLabel" FontSize="35" HorizontalAlignment="Center" Grid.Column="0"/>
                <Button Name="CheckLogButton" Content="Check Logs" FontSize="15" Margin="10 10 10 10" Grid.Column="1"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>
