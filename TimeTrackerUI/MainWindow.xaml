<Window x:Class="TimeTrackerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackerUI"
        mc:Ignorable="d"
        Title="Time Tracker" Height="320" Width="350" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Border Padding="10">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="2" BorderBrush="Black">
                    <Label Name="TimerLabel" Content="00:00:00" Background="LemonChiffon" Grid.Column="0" Foreground="Black" FontSize="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </Border>
                <Button Name="StartStopButton" Grid.Column="1" Click="StartStopButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse" Width="45" Height="45" Stroke="Black" StrokeThickness="1">
                                <Ellipse.BitmapEffect>
                                    <DropShadowBitmapEffect Color="Black" Direction="-90" ShadowDepth="0" Softness=".7" />
                                </Ellipse.BitmapEffect>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/play.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Name="PauseButton" Grid.Column="2" Click="PauseButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse" Width="45" Height="45" Stroke="Black" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/pause.png" />
                                </Ellipse.Fill>
                                <Ellipse.BitmapEffect>
                                    <DropShadowBitmapEffect Color="Black" Direction="-90" ShadowDepth="0" Softness=".7" />
                                </Ellipse.BitmapEffect>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <ComboBox Name="SelectionCombobox" Margin="10 10 10 10" Grid.Column="0" />
                <Button Name="DeleteButton" Grid.Column="1" Click="DeleteButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse" Width="45" Height="45" Stroke="Black" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/delete-button.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <TextBox Name="AddTextBox" Margin="10 10 10 10" Grid.Column="0"/>
                <Button Name="AddButton" Grid.Column="1" Click="AddButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse" Width="45" Height="45" Stroke="Black" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/add--button.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid Margin="0 15 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Border BorderThickness="2" BorderBrush="Black">
                    <Label Name="CurrentTimeLabel" FontSize="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0"/>
                </Border>
                <Button Name="CheckLogButton" Grid.Column="1" Click="CheckLogButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse" Width="45" Height="45" Stroke="Black" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/menu_button.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>
