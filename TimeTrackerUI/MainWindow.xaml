<Window x:Class="TimeTrackerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackerUI"
        mc:Ignorable="d"
        Title="Time Tracker" Height="250" Width="300" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Background="#FFDDE2C5" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Window.Resources>
        <ControlTemplate x:Key="PlayButtonTemplate" TargetType="{x:Type Button}">
            <Grid>
                <Ellipse Name="PlayEllipse" Width="40" Height="40" Stroke="Black">
                    <Ellipse.BitmapEffect>
                        <DropShadowBitmapEffect Color="Black" Direction="-90" ShadowDepth="0" Softness=".7" />
                    </Ellipse.BitmapEffect>
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Play.png"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="StopButtonTemplate" TargetType="{x:Type Button}">
            <Grid>
                <Ellipse Name="StopEllipse" Width="40" Height="40" Stroke="Black">
                    <Ellipse.BitmapEffect>
                        <DropShadowBitmapEffect Color="Black" Direction="-90" ShadowDepth="0" Softness=".7" />
                    </Ellipse.BitmapEffect>
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/Stop.png"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Border Padding="10">
        <StackPanel>
            <Grid UseLayoutRounding="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Border BorderThickness="2" BorderBrush="Black">
                    <Label Name="TimerLabel" Content="00:00:00" Grid.Column="0" Foreground="Black" FontSize="35" HorizontalContentAlignment="Center"/>
                </Border>
                <Button Name="StartStopButton" Grid.Column="1" Click="StartStopButton_Click"
                        Template="{DynamicResource PlayButtonTemplate}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="3"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>-->
                </Button>
                <Button Name="PauseButton" Grid.Column="2" Click="PauseButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse" Width="40" Height="40" Stroke="Black">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Pause.png" />
                                </Ellipse.Fill>
                                <Ellipse.BitmapEffect>
                                    <DropShadowBitmapEffect Color="Black" Direction="-90" ShadowDepth="0" Softness=".7" />
                                </Ellipse.BitmapEffect>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="3"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="198"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <ComboBox Name="SelectionCombobox" Height="23" Grid.Column="0"/>
                <Button Name="DeleteButton" Grid.Column="1" Click="DeleteButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse" Width="30" Height="30" Stroke="Black">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Bin.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="3"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="198"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <TextBox Name="AddTextBox" Height="23" Grid.Column="0"/>
                <Button Name="AddButton" Grid.Column="1" Click="AddButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse" Width="30" Height="30" Stroke="Black" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Add.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="3"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="198"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="55"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="2" Height="40" BorderBrush="Black">
                    <Label Name="TaskDetailsLabel" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="0"/>
                </Border>
                <Button Name="CheckLogButton" Grid.Column="1" Click="CheckLogButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse x:Name="Ellipse" Width="30" Height="30" Stroke="Black" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Log.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>
