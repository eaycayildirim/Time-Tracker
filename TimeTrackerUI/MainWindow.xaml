<Window x:Class="TimeTrackerUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackerUI"
        mc:Ignorable="d"
        Title="Time Tracker" Height="320" Width="400" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Border Padding="10">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
                <Label Name="TimerLabel" Content="00:00:00" Background="LemonChiffon" Grid.Column="0" Foreground="Black" FontSize="48" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Button Name="StartStopButton" Grid.Column="1" Width="50" Height="50" Click="StartStopButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/glossy-play-button.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Name="PauseButton" Grid.Column="2" Width="50" Height="50" Click="PauseButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/pause-button.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <ComboBox Name="SelectionCombobox" Margin="10 20 0 0" Grid.Column="0"/>
                <Button Name="DeleteButton" Grid.Column="1" Width="50" Height="50" Click="DeleteButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/delete--button.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBox Name="AddTextBox" Margin="10 20 0 0" Grid.Column="0"/>
                <Button Name="AddButton" Grid.Column="1" Width="50" Height="50" Click="AddButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/add--button.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid Margin="0 15 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Name="CurrentTimeLabel" FontSize="35" HorizontalAlignment="Center" Grid.Column="0"/>
                <Button Name="CheckLogButton" Grid.Column="1" Width="50" Height="50" Click="CheckLogButton_Click">
                    <Button.Template>
                        <ControlTemplate>
                            <Ellipse Name="Ellipse">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/menu_button.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>
